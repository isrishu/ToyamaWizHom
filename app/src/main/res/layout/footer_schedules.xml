<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >
    
    <ImageButton
        android:id="@+id/ibtnEditSchedule"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/ibtnDeleteSchedule"
        android:layout_toStartOf="@+id/ibtnDeleteSchedule"
        android:scaleType="fitCenter"
        android:src="@drawable/btn_edit" />
    
    <ImageButton
        android:id="@+id/ibtnDeleteSchedule"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="false"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/ibtnMakeSchedule"
        android:layout_toLeftOf="@+id/ibtnMakeSchedule"
        android:src="@drawable/btn_delete"
        android:scaleType="fitCenter" /> 
</RelativeLayout>
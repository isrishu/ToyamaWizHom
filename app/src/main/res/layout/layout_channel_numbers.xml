    <Button
        android:id="@+id/btnHash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="3dp"
        android:background="@color/transparent" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="45dp"
